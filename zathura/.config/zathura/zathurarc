set font "monospace normal 14"
set selection-clipboard clipboard
set adjust-open best-fit
set window-title-home-tilde true
set statusbar-home-tilde true

map K zoom in
map J zoom out

set default-bg "#0f0f0f"
set default-fg "#f8f8f2"

set notification-error-bg "#ac8a8c"
set notification-error-fg "#0f0f0f"
set notification-warning-bg "aca98a"
set notification-warning-fg "#191919"
set notification-bg "#0f0f0f"
set notification-fg "#f0f0f0"

set recolor true
set recolor-lightcolor "#262626"
set recolor-darkcolor "#f0f0f0"
set recolor-keephue true

set highlight-color "rgba(171, 154, 120, 0.5)"
set highlight-active-color "rgba(120, 153, 120, 0.5)"

set completion-bg               "#0f0f0f" # Background
set completion-fg               "#4c4c4c" # Comment
set completion-group-bg         "#0f0f0f" # Background
set completion-group-fg         "#4c4c4c" # Comment
set completion-highlight-bg     "#191919" # Selection
set completion-highlight-fg     "#f0f0f0" # Foreground

set index-bg                    "#0f0f0f" # Background
set index-fg                    "#f0f0f0" # Foreground
set index-active-bg             "#191919" # Current Line
set index-active-fg             "#f0f0f0" # Foreground

set inputbar-bg                 "#0f0f0f" # Background
set inputbar-fg                 "#f0f0f0" # Foreground
set statusbar-bg                "#0f0f0f" # Background
set statusbar-fg                "#f0f0f0" # Foreground

set render-loading              true
set render-loading-fg           "#0f0f0f" # Background
set render-loading-bg           "#f0f0f0" # Foreground
