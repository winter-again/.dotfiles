    xkb_layout us
    xkb_options caps:escape
    # xkb_options ctrl:swapcaps
    # xkb_options caps:swapescape
    repeat_delay 200
    repeat_rate 60
}

input "type:pointer" {
    accel_profile "flat"
    pointer_accel 0.3
}

input "type:touchpad" {
    tap enabled
    natural_scroll enabled
}

