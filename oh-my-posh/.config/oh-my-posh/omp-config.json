{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "fg": "#f0f0f0",
    "bg": "#0f0f0f",
    "blue": "#7e97ab",
    "green": "#778c73",
    "orange": "#c6a679",
    "pink": "#ac8aac",
    "purple": "#8f8aac",
    "red": "#b36d7c",
    "yellow": "#aca98a"
  },
  "upgrade": {
    "notice": false,
    "auto": false
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "options": {
            "style": "full"
          },
          "template": "<b>{{ if not .Writable }}\udb80\udf3e {{ end }}{{ .Path }}</b>",
          "foreground": "p:purple",
          "type": "path",
          "style": "plain"
        },
        {
          "options": {
            "branch_icon": "\ue725 ",
            "commit_icon": "@",
            "fetch_status": true,
            "source": "cli",
            "tag_icon": "\uf412 "
          },
          "template": " {{ .HEAD }}{{ if gt .Behind 0 }} \u21e3 {{ .Behind }}{{ end }}{{ if gt .Ahead 0 }} \u21e1 {{ .Ahead }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} stash {{ .StashCount }}{{ end }}",
          "foreground": "p:red",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "options": {
            "format": "austin",
            "threshold": 5000
          },
          "template": "\uf252 {{ .FormattedMs }} ",
          "foreground": "p:green",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "template": "{{ if .SSHSession }}[<#7e97ab>{{ .UserName }}</>@<#8f8aac>{{ .HostName }}</>] {{ end }}",
          "foreground": "p:fg",
          "type": "session",
          "style": "plain"
        },
        {
          "type": "python",
          "foreground": "p:yellow",
          "style": "plain",
          "template": " îˆµ {{ .Full }} "
        },
        {
          "options": {
            "time_format": "03:04:05 PM"
          },
          "template": "\uf017 {{ .CurrentDate | date .Format }}",
          "foreground": "p:blue",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "<b>></b>",
          "foreground": "p:blue",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 4,
  "async": true,
  "final_space": true
}
